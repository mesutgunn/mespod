// Prisma schema for MesPOD
// PostgreSQL database with User model and Role enum

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  passwordHash String
  role         Role      @default(USER)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  projects     Project[]
}

model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  etsyUrl     String
  etsyTitle   String?
  etsyDesc    String?
  etsyTags    String[] // Array of tags
  status      String   @default("processing") // processing, completed, failed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  designs     Design[]
}

model Design {
  id              String   @id @default(cuid())
  projectId       String
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  imageUrl        String
  prompt          String?
  mockupTemplate  String? // tshirt, sweatshirt, hoodie
  mockupUrl       String?
  seoTitle        String?
  seoDescription  String?
  seoTags         String[] // Array of tags
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
